/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 30rpx; /* 悬浮距离底部 */
  left: 30rpx; /* 左边距 */
  right: 30rpx; /* 右边距 */
  height: 120rpx; /* 稍微增加高度 */
  background: rgba(255, 255, 255, 0.95); /* 半透明背景 */
  backdrop-filter: blur(20rpx); /* 毛玻璃效果 */
  -webkit-backdrop-filter: blur(20rpx);
  display: flex;
  border-radius: 60rpx; /* 圆角 */
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12); /* 更明显的阴影 */
  border: 1rpx solid rgba(255, 255, 255, 0.3); /* 边框增强玻璃效果 */
}

/* 移除边框线，悬浮样式不需要 */
.tab-bar-border {
  display: none;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 15rpx 0; /* 增加内边距适应更高的tabBar */
  border-radius: 50rpx; /* 给每个item添加圆角 */
  transition: all 0.3s ease; /* 添加过渡动画 */
}

.tab-icon {
  font-size: 50rpx; /* 稍微增大图标 */
  line-height: 1;
  margin-top: 20rpx; /* 图标向下移动 */
  margin-bottom: 6rpx; /* 减少间距 */
  transition: all 0.3s ease;
  filter: grayscale(0.3); /* 未激活时稍微灰化 */
}

.tab-icon.active {
  transform: scale(1.15); /* 更明显的缩放 */
  filter: grayscale(0); /* 激活时移除灰化 */
}

.tab-text {
  font-size: 22rpx; /* 稍微减小文字 */
  color: #999999;
  transition: all 0.3s ease;
  font-weight: 400;
}

.tab-text.active {
  color: #667eea;
  font-weight: 600; /* 更粗的字体 */
  transform: scale(1.05); /* 轻微放大激活文字 */
}

/* 为激活的item添加背景效果 */
.tab-bar-item.active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(1.02);
}