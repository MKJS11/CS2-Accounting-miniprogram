/* recharge.wxss */
page {
  background: #f0f9ff;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  padding: 20rpx;
  padding-bottom: 200rpx;
  position: relative;
}

/* 头部区域 */
.header {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
  color: white;
  border-radius: 0 0 32rpx 32rpx;
  margin: -20rpx -20rpx 40rpx -20rpx;
  box-shadow: 0 8rpx 32rpx rgba(14, 165, 233, 0.2);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(180deg); }
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
  z-index: 1;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  opacity: 0.9;
  font-weight: 300;
  position: relative;
  z-index: 1;
}

.form-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 0 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  position: relative;
}

.form-item {
  margin-bottom: 48rpx;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #2d3748;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.label-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}

.label-text {
  flex: 1;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border: 3rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  background: #f7fafc;
  transition: all 0.3s ease;
}

.input-wrapper.modern {
  background: white;
  border-color: #cbd5e0;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.input-wrapper.modern:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.currency-prefix {
  font-size: 36rpx;
  color: #667eea;
  margin-right: 16rpx;
  font-weight: bold;
}

.form-input {
  flex: 1;
  height: 100rpx;
  font-size: 36rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 预置金额选择 */
.preset-amounts {
  margin-bottom: 48rpx;
}

.preset-title {
  font-size: 28rpx;
  color: #4a5568;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.preset-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.preset-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 36rpx 20rpx;
  background: #f7fafc;
  border: 3rpx solid #e2e8f0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.preset-item:active {
  transform: scale(0.98);
}

.preset-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
}

.preset-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
}

.preset-item.active .preset-value {
  color: white;
}



/* 汇率信息卡片 */
.exchange-card {
  background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(14, 165, 233, 0.1);
}

.exchange-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.exchange-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.exchange-title {
  font-size: 28rpx;
  color: #4c51bf;
  font-weight: 600;
}

.exchange-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.exchange-rate {
  font-size: 32rpx;
  color: #0369a1;
  font-weight: bold;
}

.exchange-note {
  font-size: 24rpx;
  color: #6b7280;
  opacity: 0.8;
}

.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.1);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

/* 金额汇总卡片 */
.summary-card {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #e2e8f0;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.summary-row:last-child {
  margin-bottom: 0;
}

.summary-label {
  font-size: 28rpx;
  color: #4a5568;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
}

.summary-value.usd {
  color: #48bb78;
}

.summary-value.rmb {
  color: #ed8936;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(14, 165, 233, 0.3);
  transition: all 0.3s ease;
}

.submit-btn.modern {
  position: relative;
  overflow: hidden;
}

.submit-btn.modern:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 20rpx rgba(14, 165, 233, 0.3);
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 32rpx;
}

.submit-btn[disabled] {
  background: #a0aec0;
  color: white;
  box-shadow: none;
  transform: none;
}