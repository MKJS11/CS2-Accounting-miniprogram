/* user.wxss */
page {
  background: #f5f5f5;
}

.container {
  padding: 0;
}

/* 登录容器 */
.login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-box {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.1);
}

.app-logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: block;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 60rpx;
}

/* 新版表单登录 */
.form-login {
  margin-top: 40rpx;
}

.avatar-wrapper {
  margin-bottom: 30rpx;
}

.avatar-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  padding: 0;
}

.avatar-button::after {
  border: none;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 80rpx;
}

.avatar-placeholder {
  font-size: 60rpx;
  color: #999;
}

.avatar-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
  display: block;
}

.nickname-wrapper {
  margin-bottom: 40rpx;
}

.nickname-input {
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  padding: 25rpx 30rpx;
  font-size: 30rpx;
  text-align: center;
}

.input-placeholder {
  color: #999;
}

.login-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.confirm-btn {
  margin-bottom: 30rpx;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.login-tips {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}

/* 用户容器 */
.user-container {
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 25rpx;
  padding: 45rpx;
  display: flex;
  align-items: center;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 15rpx 40rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 50%;
  z-index: 0;
}

.user-avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  border: 5rpx solid rgba(255,255,255,0.4);
  margin-right: 35rpx;
  position: relative;
  z-index: 1;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15);
}

.user-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.user-name {
  font-size: 38rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.user-id {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 25rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 15rpx 35rpx rgba(79, 172, 254, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.stats-item {
  text-align: center;
  color: white;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.stats-label {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  font-weight: 500;
}

/* 菜单列表 */
.menu-list {
  background: white;
  border-radius: 25rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0,0,0,0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx 35rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.3s ease;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  transform: translateX(10rpx);
}

.menu-icon {
  font-size: 44rpx;
  margin-right: 30rpx;
  opacity: 0.8;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 版本信息显示 */
.version-info {
  text-align: center;
  margin: 40rpx 0 30rpx 0;
  padding: 20rpx;
}

.version-text {
  font-size: 26rpx;
  color: #999;
  font-weight: 400;
  opacity: 0.8;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 100rpx;
  background: white;
  color: #ef4444;
  border: 2rpx solid #ef4444;
  border-radius: 25rpx;
  font-size: 34rpx;
  font-weight: 600;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.1);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.logout-btn:active {
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 15rpx rgba(239, 68, 68, 0.15);
}